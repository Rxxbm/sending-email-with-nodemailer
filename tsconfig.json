{
    "compileOnSave": true,
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "outDir": "./dist",
        "rootDir": "./srcc",
        "removeComments": false,
        "resolveJsonModule": true,

        "strict": true,
        "strictPropertyInitialization": false,

        "moduleResolution": "node",
        "baseUrl": "./srcc",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "paths": {
            "@root/*": ["./srcc/*"],
            "@modules/*": ["./srcc/modules/*"],
            "@libray/*": ["./srcc/libray/*"],
            "@models/*": ["./srcc/models/*"],
            "@routes/*": ["./srcc/routes/*"],
            "@utils/*": ["./srcc/utils/*"],
            "@decorators/*": ["./srcc/decorators/*"]
        }
    },
    "exclude": [
        "node_modules",
        "dist",
        "__tests__",
        "types"
    ],
    "include": [
        "srcc/**/*",
        "setEnvVars.ts"
    ]
}
